@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<button type="button" class="btn btn-primary" style="margin-top: 20px; margin-bottom: 20px;">@Html.ActionLink("New Movie", "New","Movies")</button>
@if (!Model.Any())
{
    <p>There are currently no movies.</p>
}
else
{

    <table id="movies" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
                <th>Release Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>        
                    <td>@Html.ActionLink(movie.Name,"Details","Movies", new {id = movie.Id}, null)</td>
                    <td>@movie.GenreType.Name</td>
                    <td>@movie.ReleaseDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
@section scripts
{
    <script>
        $(document).ready(function() {
            $("#movies").dataTable();
        })
    </script>
}
