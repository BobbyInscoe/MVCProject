@model Vidly.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>
@using (Html.BeginForm("New", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new {@class = "form-control"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM YYYY}", new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreTypeId)
        @Html.DropDownListFor(m => m.Movie.GenreType, new SelectList(@Model.GenreTypes, "Id", "Name"), "Select Genre", new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Stock)
        @Html.TextBoxFor(m => m.Movie.Stock, new {@class = "form-control"})
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}