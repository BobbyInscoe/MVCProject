@model Vidly.Models.Movie
@{
    ViewBag.Title = "DetailsReadOnly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Genre</th>
            <th>Release Date</th>
            <th>Date Added</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.GenreType.Name</td>
            <td>@Model.ReleaseDate.Date.ToShortDateString()</td>
            <td>@Model.DateAdded.Date.ToShortDateString()</td>
            <td>@Model.Stock</td>
        </tr>
    </tbody>
</table>